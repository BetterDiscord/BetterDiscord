{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "allowJs": false,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,

    // Import aliases
    "paths": {
        "@assets/*": ["./assets/*"],
        "@common/*": ["./src/common/*"],
        "@builtins/*": ["./src/betterdiscord/builtins/*"],
        "@data/*": ["./src/betterdiscord/data/*"],
        "@api/*": ["./src/betterdiscord/api/*"],
        "@modules/*": ["./src/betterdiscord/modules/*"],
        "@polyfill/*": ["./src/betterdiscord/polyfill/*"],
        "@stores/*": ["./src/betterdiscord/stores/*"],
        "@structs/*": ["./src/betterdiscord/structs/*"],
        "@styles/*": ["./src/betterdiscord/styles/*"],
        "@ui/*": ["./src/betterdiscord/ui/*"],
        "@utils/*": ["./src/betterdiscord/utils/*"],
        "@webpack": ["./src/betterdiscord/webpack"],
    },
    "typeRoots": ["node_modules/@types", "src/betterdiscord/types"]
  },
  "include": [
    "src/**/*",
    "scripts/*",
    "tests/**/*"
  ],
  "typedocOptions": {
    "name": "BetterDiscordAPI",
    "entryPoints": ["src/betterdiscord/api/index.ts"],
    "entryPointStrategy": "resolve",
    "out": "docs",
    "sidebarLinks": {},
    "navigation": {
        "includeCategories": true,
        "includeGroups": true,
        "excludeReferences": false,
    },
    "plugin": ["typedoc-plugin-markdown", "typedoc-plugin-frontmatter", "typedoc-vitepress-theme", "typedoc-plugin-mdn-links", "typedoc-plugin-merge-modules", "typedoc-plugin-missing-exports", "typedoc-plugin-rename-defaults"],
    "skipErrorChecking": true,
    "placeInternalsInOwningModule": true,
    "includeVersion": false,
    "disableSources": false,
    "excludeExternals": true,
    "excludeInternal": true,
    "excludeReferences": true,
    "hideGenerator": true,
    "readme": "none",
    "router": "kind",
    "externalPattern": ["node_modules/**/*", "src/betterdiscord/modules/*.ts"],

    // Markdown plugin options
    "hideBreadcrumbs": true,
    "useCodeBlocks": true,
    "expandObjects": true,
    "expandParameters": true,
    // These all default to list
    "indexFormat": "list",
    "parametersFormat": "table",
    "interfacePropertiesFormat": "list",
    "classPropertiesFormat": "list",
    "typeAliasPropertiesFormat": "list",
    "enumMembersFormat": "list",
    "propertyMembersFormat": "list",
    "typeDeclarationFormat": "list",

    // Vitepress theme options
    "sidebar": {
      "collapsed": false,
      "pretty": true
    },

    // Frontmatter plugin for index.md
    "indexFrontmatter": {
      "title": "Overview",
    },

    // MDN Links plugin options
    "resolveUtilityTypes": true, // Added by typedoc-plugin-mdn-links

    // Merge modules plugin options
    "mergeModulesRenameDefaults": true, // NEW option of TypeDoc added by this plugin
    "mergeModulesMergeMode": "project", // NEW option of TypeDoc added by this plugin
  }
}