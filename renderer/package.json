{
    "name": "@betterdiscord/renderer",
    "description": "Renderer portion of the BetterDiscord application.",
    "private": true,
    "main": "src/index.js",
    "scripts": {
        "build": "pnpm webpack --progress --color",
        "watch": "pnpm webpack --progress --color --watch",
        "build-prod": "pnpm webpack --mode production --no-devtool",
        "build-css": "pnpm postcss src/styles/index.css -o dist/style.css",
        "watch-css": "pnpm postcss src/styles/index.css -o dist/style.css -w",
        "lint-css": "pnpm stylelint **/*.css",
        "lint-js": "pnpm eslint .",
        "lint": "pnpm run lint-js && pnpm run lint-css",
        "lint-fix": "pnpm run lint-js --fix && pnpm run lint-css --fix",
        "lint-prod": "pnpm run lint-js --quiet && pnpm run lint-css --quiet"
    },
    "devDependencies": {
        "@babel/core": "^7.23.9",
        "@babel/preset-env": "^7.23.9",
        "@babel/preset-react": "^7.23.3",
        "@babel/register": "^7.23.7",
        "babel-loader": "^8.3.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "circular-dependency-plugin": "^5.2.2",
        "css-loader": "^6.10.0",
        "postcss": "^8.4.35",
        "postcss-cli": "^9.1.0",
        "postcss-csso": "^6.0.1",
        "postcss-easy-import": "^4.0.0",
        "postcss-loader": "^6.2.1",
        "stylelint": "^14.16.1",
        "stylelint-config-standard": "^24.0.0",
        "webpack": "^5.90.3"
    },
    "dependencies": {
        "buffer": "^6.0.3",
        "clsx": "^2.1.1"
    },
    "pnpm": {
        "overrides": {
            "braces@<3.0.3": ">=3.0.3",
            "webpack@<5.94.0": ">=5.94.0",
            "micromatch@<4.0.8": ">=4.0.8"
        }
    }
}
