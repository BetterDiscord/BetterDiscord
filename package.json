{
    "name": "betterdiscord",
    "version": "1.12.0",
    "description": "Enhances Discord by adding functionality and themes.",
    "main": "src/index.js",
    "scripts": {
        "build": "pnpm run -r build",
        "build-prod": "pnpm -r build-prod",
        "build-injector": "pnpm --filter injector build",
        "build-renderer": "pnpm --filter renderer build",
        "build-preload": "pnpm --filter preload build",
        "inject": "node scripts/inject.js",
        "lint": "pnpm eslint . && pnpm stylelint **/*.css",
        "lint-fix": "pnpm eslint . --fix && pnpm stylelint **/*.css --fix",
        "lint-prod": "pnpm eslint . --quiet && pnpm stylelint **/*.css --quiet",
        "test": "mocha --require @babel/register --recursive \"./tests/**/*.js\"",
        "test-prod": "pnpm run test --reporter min",
        "dist": "pnpm run build-prod && node scripts/pack.js",
        "api": "pnpm jsdoc -X -r renderer/src/modules/api/ > jsdoc-ast.json",
        "translations": "node -r dotenv/config scripts/translations.js"
    },
    "devDependencies": {
        "@babel/core": "^7.23.9",
        "@babel/preset-env": "^7.23.9",
        "@babel/register": "^7.23.7",
        "@electron/asar": "^3.2.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jsdoc": "^4.0.4",
        "mocha": "^10.3.0",
        "stylelint": "^14.16.1",
        "stylelint-config-standard": "^24.0.0",
        "terser-webpack-plugin": "^5.3.10",
        "webpack": "^5.90.3",
        "webpack-cli": "^4.10.0"
    },
    "engines": {
        "node": ">=14",
        "pnpm": ">=7"
    },
    "pnpm": {
        "overrides": {
            "json5@<1.0.2": ">=1.0.2",
            "braces@<3.0.3": ">=3.0.3",
            "webpack@<5.94.0": ">=5.94.0",
            "micromatch@<4.0.8": ">=4.0.8"
        }
    }
}
